{
  "name": "@slds/tokens",
  "description": "Sanoma Learning Design System Tokens",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "build": "wireit",
    "build:sanoma-learning/light": "wireit",
    "build:sanoma-learning/dark": "wireit"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "build:sanoma-learning/light",
        "build:sanoma-learning/dark"
      ]
    },
    "build:sanoma-learning/light": {
      "command": "yarn node --no-warnings build.js sanoma-learning/light"
    },
    "build:sanoma-learning/dark": {
      "command": "yarn node --no-warnings build.js sanoma-learning/dark"
    }
  },
  "devDependencies": {
    "lodash": "^4.17.21",
    "style-dictionary": "^3.7.1",
    "token-transformer": "^0.0.26",
    "wireit": "^0.7.1"
  }
}
