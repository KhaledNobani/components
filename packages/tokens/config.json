{
  "source": ["src/**/*.json"],
  "platforms": {
    "css": {
      "transformGroup": "css",
      "prefix": "sl",
      "buildPath": "dist/css/",
      "files": [
        {
          "destination": "variables.css",
          "format": "css/variables",
          "options": {
            "outputReferences": true
          }
        },
        {
          "destination": "_mixins.scss",
          "format": "scss/mixin2"
        }
      ]
    },
    "scss": {
      "transformGroup": "custom/scss",
      "prefix": "sl",
      "buildPath": "dist/scss/",
      "files": [{
        "destination": "_mixins.scss",
        "format": "scss/mixin"
      }]
    }
  }
}
