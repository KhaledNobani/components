{
  "name": "@slds/sanoma-learning",
  "description": "Tokens for Sanoma Learning theme",
  "version": "0.0.1",
  "scripts": {
    "build": "wireit",
    "build:light": "wireit",
    "build:dark": "wireit"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "build:light",
        "build:dark"
      ]
    },
    "build:light": {
      "command": "yarn node ../../build-theme.mjs sanoma-learning/light"
    },
    "build:dark": {
      "command": "yarn node ../../build-theme.mjs sanoma-learning/dark"
    }
  },
  "devDependencies": {
    "token-transformer": "^0.0.25",
    "wireit": "^0.7.1"
  }
}
